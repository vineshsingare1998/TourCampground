<%- include("../partials/header") %>

<div class = "container">
	<div class = "row">
		<div class = "col-md-3">
			<p class = "lead">
				YelpCamp
			</p>
			<div class = "list-group">
				<li class = "list-group-item active">info 1</li>
				<li class = "list-group-item">info 2</li>
				<li class = "list-group-item">info 3</li>
			</div>
		</div>
		<div class = "col-md-9">
			<div class = "thumbnail">
				<img class = "img-responsive" src = "<%= campground.image %>">
				 <div class = "caption-full"> <!-- Bootstrap has a premade class "caption" which inherently adds up 9px padding -->
					<h4 class = "pull-right">
						$<%= campground.price %>/night
					</h4>
					<h3><a><%= campground.name %></a></h3>
					<p><%= campground.description %></p>
					 <p>
						<em>Submitted By <%= campground.author.username %></em> 
					 </p>
					 
					 <!-- if there won't be any currentUser logged in then... currentUser._id will also be undefined so 
					 the if(campground.author.id.equals(currentUser._id) will throw error...that's why we're involving it -->
					 
					 <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
						 <a class = "btn btn-warning" href = "/campgrounds/<%= campground._id %>/edit">Edit</a>
						 <form id = "delete-form" action = "/campgrounds/<%= campground._id %>?_method=DELETE" method = "POST">
							 <button class = "btn btn-danger">
								 Delete
							 </button>
						 </form>
					 <% } %>
					 
					 
					 
					 <p>
						 <a href = "/campgrounds">Go back</a>
					 </p>
				</div>
			</div>
			<div class = "well">
				<div class = "text-right">
					<a class = "btn btn-success" href = "/campgrounds/<%= campground._id %>/comments/new ">Add a new comment</a>   
				</div>
				<hr>
				<% campground.comments.forEach(function(comment){ %>
				 	<div class = "row">
						<div class = "col-md-12">
							<strong><%= comment.author.username %></strong>
							<span class = "pull-right">10 days ago</span>
							<p><%= comment.text %></p>
							
							 <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
									<a class = "btn btn-xs btn-warning" href = "/campgrounds/<%= campground._id %>/comments/<%=                                        comment._id %>/edit" >Edit
									</a>
									<form id = "delete-form" action = "/campgrounds/<%= campground._id                                                                  %>/comments/<%=comment._id %>?_method=DELETE" method = "POST">
										<input type = "submit" class = "btn btn-xs btn-danger" value = "Delete">
									</form>
							    <% } %>
						</div>
				    </div>

<% }) %>

			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>
